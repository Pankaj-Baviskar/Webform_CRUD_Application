@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Webform_CRUD_Application.Models.WidgetEntity>

<h1 class="text-center">Widget Inventory</h1>

<table class="table table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(model => model.WidgetId)</th>
        <th>@Html.DisplayNameFor(model => model.InventoryCode)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>@Html.DisplayNameFor(model => model.QuantityOnHand)</th>
        <th>@Html.DisplayNameFor(model => model.ReorderQuantity)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.HiddenFor(model => item.WidgetId)
        <tr>
            <td>@Html.DisplayFor(modelItem => item.WidgetId)</td>
            <td>@Html.DisplayFor(modelItem => item.InventoryCode)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.QuantityOnHand)</td>
            <td>@Html.DisplayFor(modelItem => item.ReorderQuantity)</td>
            <td>
                <a asp-action="UpdateWidget" asp-route-id="@item.WidgetId">Edit</a>
                <a asp-action="DeleteWidgetView" asp-route-id="@item.WidgetId">Delete</a>
            </td>
        </tr>
    }
</table>
<p>
    <a asp-action="AddWidget" asp-controller="Home" class="btn btn-outline-primary">Add to Inventory</a>
</p>






